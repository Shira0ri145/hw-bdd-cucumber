<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Rotten Potatoes!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
      <h1 class="title">Rotten Potatoes!</h1>
      <ul class="navbar-nav ml-auto">
        <% if current_moviegoer %>
          <li>
            <span class="nav-link"> Welcome , <%= current_moviegoer.full_name %></span>
          </li>
          <li class="nav-item">
              <!-- Current User: #{current_moviegoer.full_name} -->
            <%= image_tag(current_moviegoer.avatar_url, class:'user-avatar') %>
          </li>
          <li>
            <%= button_to 'Logout', destroy_moviegoer_session_path, class: 'btn logout-button', date: { turbo: "false" },method: :delete %>
          </li>

        <% end %>
      </ul>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
